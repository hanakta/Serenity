{
  "name": "serenity/backend",
  "description": "🐱 Serenity Backend API - PHP сервер для менеджера задач",
  "type": "project",
  "require": {
    "php": ">=8.2",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "firebase/php-jwt": "^6.8",
    "vlucas/phpdotenv": "^5.5",
    "respect/validation": "^2.2",
    "monolog/monolog": "^3.4",
    "tuupola/cors-middleware": "^1.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.4",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "test": "phpunit",
    "analyze": "phpstan analyse src",
    "migrate": "php database/migrate.php",
    "seed": "php database/seed.php"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
